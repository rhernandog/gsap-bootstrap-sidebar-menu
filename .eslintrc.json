{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "globals": {
    "TweenLite": true,
    "TimelineLite": true,
    "Power1": true,
    "__dirname": true,
    "test": true,
    "expect": true,
    "afterEach": true
  },
  "rules": {
    "no-const-assign": 1,
    "linebreak-style": [
      2,
      "windows"
    ],
    "no-tabs": [
      0
    ],
    "sort-imports": [
      0,
      "always"
    ],
    "no-multiple-empty-lines": [
      0
    ],
    "multiline-comment-style": [
      0
    ],
    "one-var": [
      0
    ],
    "no-underscore-dangle": [
      0
    ],
    "arrow-parens": [
      0
    ],
    "max-len": [
      0,
      {
        "ignoreComments": true,
        "code": 120
      }
    ],
    "object-curly-newline": [
      0,
      {
        "multiline": true
      }
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "no-this-before-super": 1,
    "no-undef": 1,
    "no-unreachable": 1,
    "no-unused-vars": 1,
    "constructor-super": 1,
    "valid-typeof": 1,
    "indent": [
      1,
      2,
      {
        "VariableDeclarator": 2,
        "SwitchCase": 1
      }
    ],
    "semi": [
      2,
      "always"
    ],
    "no-redeclare": [
      1,
      {
        "builtinGlobals": true
      }
    ],
    "space-infix-ops": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-unescaped-entities": 1,
    "react/prop-types": [
      1,
      {
        "skipUndeclared": true
      }
    ],
    "react/no-unused-prop-types": [
      1,
      {
        "skipShapeProps": true
      }
    ],
    "no-console": 1
  }
}